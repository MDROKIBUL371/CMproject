<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 class="display-3">Welcome to Yelpcamp!</h1>
            <p>view our hand-picked campgrounds from all over the world</p>
            <p> <a class="btn btn-primary btn-lg" href="/campgrounds/new">add new campground</a>
            </p>
        </div>
    </header>
    <div class="row justify-content-center flex-wrap text-center">


        <% campgrounds.forEach(function(campground){ %>
        <div class="col-12 col-md-3">
            <div class="card">
                <img class="card-img-top" src="<%= campground.image %>">
                <div class="card-body">
                    <h4 class="card-title"><%=campground.name%></h4>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                </div>
            </div>
        </div>
        <%}); %>
    </div>
</div>
<% include ../partials/footer %>
